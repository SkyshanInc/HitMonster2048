<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_challenge_friend"
    android:layout_width="fill_parent"
    android:layout_height="60dp" >

    <!-- <com.friendou.bn.ui.customwidget.number.NumberView -->
    <!-- android:id="@+id/tv_friend_id" -->
    <!-- android:layout_width="50dp" -->
    <!-- android:layout_height="45dp" -->
    <!-- android:layout_centerVertical="true" -->
    <!-- android:layout_marginLeft="15dp" -->
    <!-- android:gravity="center" /> -->

    <com.friendou.bn.widget.imageview.RoundedCornersImage
        android:id="@+id/iv_friend_avater"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/general_default_head"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_friend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/iv_rewarddiamondnum_bg"
        android:layout_toRightOf="@+id/iv_friend_avater"
        android:gravity="left"
        android:singleLine="true"
        android:text="@string/testname"
        android:textColor="@color/list_item_name_brown"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/iv_rewarddiamondnum_bg"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_invite_press" />

    <ImageView
        android:id="@+id/iv_text_lingqu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_rewarddiamondnum_bg"
        android:layout_alignTop="@+id/iv_rewarddiamondnum_bg"
        android:src="@drawable/add_friends_page_text_get" />

    <ImageView
        android:id="@+id/iv_reward_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_rewarddiamondnum_bg"
        android:layout_alignLeft="@+id/iv_rewarddiamondnum_bg"
        android:src="@drawable/top_physical_love_icon" />

    <TextView
        android:id="@+id/tv_rewarddiamondnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_rewarddiamondnum_bg"
        android:layout_alignRight="@+id/iv_rewarddiamondnum_bg"
        android:layout_below="@+id/iv_text_lingqu"
        android:layout_toRightOf="@+id/iv_reward_icon"
        android:textColor="@color/white"
        android:textSize="13sp" />

</RelativeLayout>