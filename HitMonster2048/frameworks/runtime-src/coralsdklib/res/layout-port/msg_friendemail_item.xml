<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_friendmail"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical" >

    <com.friendou.bn.widget.imageview.RoundedCornersImage
        android:id="@+id/iv_friendmail_avater"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/general_default_head"
        android:gravity="center"
        android:padding="2dp" />

    <TextView
        android:id="@+id/tv_friendmail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/tv_friendmail_time"
        android:layout_toRightOf="@+id/iv_friendmail_avater"
        android:gravity="left|center_vertical"
        android:singleLine="true"
        android:text="@string/testname"
        android:textColor="@color/list_item_name_brown"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_friendmail_describe"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/iv_friendmail_avater"
        android:layout_below="@+id/tv_friendmail_name"
        android:layout_toRightOf="@+id/iv_friendmail_avater"
        android:gravity="center"
        android:text="@string/sendpowerword"
        android:textColor="@color/friend_msg_item_text"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_friendmail_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/btn_gainpower"
        android:background="@drawable/distance_time_show_bottom_bg"
        android:ems="6"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/testnum"
        android:textColor="@color/bngame_item_friend_num"
        android:textSize="@dimen/list_item_right_tip" />

    <ImageView
        android:id="@+id/btn_gainpower"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ranking_list_heart_no_status_button"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_friendmail_avater"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/ranking_list_send_heart_time_bottom_bg"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="10sp" />

</RelativeLayout>