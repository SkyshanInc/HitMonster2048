<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_tab"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/store_page_content_show_bg" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/iv_shopping_heart_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:adjustViewBounds="true"
            android:src="@drawable/top_physical_love_icon" />

         <ImageView
            android:id="@+id/iv_shopping_x_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_shopping_heart_icon"
            android:layout_alignTop="@id/iv_shopping_heart_icon"
            android:layout_toRightOf="@id/iv_shopping_heart_icon"
            android:adjustViewBounds="true"
            android:background="@drawable/store_page_number_x" />
        
        <FrameLayout
            android:id="@+id/ll_powerheart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_shopping_heart_icon"
            android:layout_alignTop="@id/iv_shopping_heart_icon"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_shopping_x_icon" >

            <com.friendou.bn.widget.number.NumberView
                android:id="@+id/nv_buy_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical" />
        </FrameLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/shopping_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/top_physical_love_icon" />

    <RelativeLayout
        android:id="@+id/shopping_power_rl"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:background="@drawable/btn_store_press"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <ImageView
            android:id="@+id/iv_shopping_diamond_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:adjustViewBounds="true"
            android:src="@drawable/top_physical_masonry_icon" />

        <com.friendou.bn.widget.number.NumberView
            android:id="@+id/nv_need_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_shopping_diamond_icon"
            android:layout_alignTop="@id/iv_shopping_diamond_icon"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_shopping_diamond_icon"/>
    </RelativeLayout>

</RelativeLayout>