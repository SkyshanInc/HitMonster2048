<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_bnresult"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical" >

    <!-- <ImageView -->
    <!-- android:id="@+id/iv_bnresult_icon" -->
    <!-- android:layout_width="wrap_content" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- android:layout_marginLeft="5dp" -->
    <!-- android:background="@drawable/battlenet_message_win_icon" -->
    <!-- android:gravity="center" -->
    <!-- android:padding="2dp" /> -->

    <com.friendou.bn.widget.imageview.RoundedCornersImage
        android:id="@+id/iv_avater"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/general_default_head"
        android:gravity="center"
        android:padding="2dp" />

    <TextView
        android:id="@+id/tv_bnresult_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/tv_bnresult_time"
        android:layout_toRightOf="@+id/iv_avater"
        android:gravity="left|center_vertical"
        android:singleLine="true"
        android:text="@string/testname"
        android:textColor="@color/list_item_name_brown"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_bnresult_score"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/iv_avater"
        android:layout_below="@+id/tv_bnresult_name"
        android:layout_toRightOf="@+id/iv_avater"
        android:gravity="center"
        android:text="@string/testnum"
        android:textColor="@color/friend_msg_item_text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_bnresult_describe"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/iv_avater"
        android:layout_below="@+id/tv_bnresult_name"
        android:layout_toRightOf="@+id/tv_bnresult_score"
        android:gravity="center"
        android:text="@string/testnum"
        android:textColor="@color/friend_msg_item_text"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/iv_revengeresult"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/iv_avater"
        android:layout_below="@+id/tv_bnresult_name"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/tv_bnresult_describe"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_bnresult_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/btn_dealresult"
        android:background="@drawable/distance_time_show_bottom_bg"
        android:ems="6"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/testnum"
        android:textColor="@color/bngame_item_friend_num"
        android:textSize="9sp" />

    <ImageView
        android:id="@+id/btn_dealresult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:background="@drawable/btn_orange_small" />
    
    <ImageView
        android:id="@+id/btn_dealresult_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:background="@drawable/btn_green_small"
        android:visibility="invisible" />
    
    <ImageView
        android:id="@+id/btn_dealresult_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_dealresult"
        android:layout_alignLeft="@+id/btn_dealresult" />

</RelativeLayout>